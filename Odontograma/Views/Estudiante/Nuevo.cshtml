@model Odontograma.Models.Odo.EstudianteViewModel
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col">

                @using (Html.BeginForm("Nuevo", "Estudiante", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="mt-5">Datos para tu perfil de estudiante</h4>

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="input-group input-group-sm mb-3">
                        @Html.LabelFor(m => m.Nombre, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        @Html.LabelFor(m => m.Apellido, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        @Html.LabelFor(m => m.Telefono, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        @Html.LabelFor(m => m.FechaNacimiento, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "form-control", @type = "date" })
                        </div>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        @Html.LabelFor(m => m.Sexo, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.DropDownListFor(m => m.Sexo, (List<SelectListItem>)ViewBag.ListadoSexos, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        @Html.LabelFor(m => m.EscuelaId, new { @class = "col-md-2 control-label" })
                        <div class="col-md-5">
                            @Html.DropDownList("EscuelaId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.EscuelaId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="col-md-7">
                            <div class="text-right">
                                <input type="submit" class="btn btn-lg btn-dark" value="Registrarme" />
                            </div>

                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

