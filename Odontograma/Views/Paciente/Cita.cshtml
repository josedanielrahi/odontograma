@model Odontograma.Models.Odo.CitaViewModel
@{
    ViewBag.Title = "Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5 container">
    <div class="row">
        <div class="col">
            <h2>Nueva cita</h2>
            <div class="p-3 alert-success">
                Todas las citas agendadas deben ser confirmadas por un estudiante! <strong>NO ASISTA</strong> sin antes haber hablado con un practicante
            </div>
            @using (Html.BeginForm("Cita", "Paciente", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.Fecha, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control", @type = "date" })
                    </div>
                </div>

                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.Hora, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Hora, new { @class = "form-control", @type = "time" })
                    </div>
                </div>

                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.ClinicaId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.DropDownList("ClinicaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ClinicaId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="input-group input-group-sm mb-3">
                    <div class="col-md-7">
                        <div class="text-right">
                            @Html.ActionLink("Regresar", "Index", "Paciente", null, new { @class = "btn btn-lg btn-outline-dark" })
                            <input type="submit" class="btn btn-lg btn-dark" value="Agendar" />
                        </div>

                    </div>
                </div>

            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}