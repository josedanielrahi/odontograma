@{
    ViewBag.Title = "Inicio";
}
    @if (User.IsInRole("Solicitud"))
    {
    <div class="p-3 slide alert-danger text-center">
        <strong>¡No te desesperes! </strong>El equipo de Odontograma esta comprobanmdo que eres un estudiante activo
    </div>
    }


<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active" width="100%" height="100%">
            <img src="~/img/cuatro.jpg" alt="" srcset="">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Profesores expertos en la materia</h1>
                    <p>Docentes formando los mejores profesionales en el área</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/dos.jpg" alt="" srcset="" width="100%" height="100%">
            <div class="container">
                <div class="carousel-caption">
                    <h1>El mejor equipo de trabajo</h1>
                    <p>Tener las mejores instalaciones, equipo y material de trabajo es clave para una mejor formación de egresados</p>

                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/tres.jpg" alt="" srcset="" width="100%" height="100%">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Planes de estudio</h1>
                    <p>Los mejores planes de estudio vigentes para la mejora constante de nuestros alumnos</p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--Clinicas -->
<h1 class="py-1 mb-3 text-center">Clinicas</h1>
<div class="py-1 container marketing">
    <div class="row">

        <div class="col-lg-4">
            <img src="~/img/IPN.png" class="bd-placeholder-img rounded-circle" width="140" height="140">
            <h2>Clínica IPN</h2>
        </div>

        <div class="col-lg-4">
            <img src="~/img/UNAM.png" class="bd-placeholder-img rounded-circle" width="140" height="140">
            <h2>Clínica UNAM</h2>
        </div>

        <div class="col-lg-4">
            <img src="~/img/UVM.jpg" class="bd-placeholder-img rounded-circle" width="140" height="140">
            <h2>Clínica UVM</h2>
        </div>

        <div class="col-lg-4">
            <img src="~/img/UNITEC.png" class="bd-placeholder-img rounded-circle" width="140" height="140">
            <h2>Clínica UNITEC</h2>
        </div>

        <div class="col-lg-4">
            <img src="~/img/UAM.jpg" class="bd-placeholder-img rounded-circle" width="140" height="140">
            <h2>Clínica UAM</h2>
        </div>

        <div class="col-lg-4">
            <img src="~/img/UA.png" class="bd-placeholder-img rounded-circle" width="140" height="140">
            <h2>Clínica UA</h2>
        </div>


    </div>
</div>

<!--Odontologo-->

<div class="p-5 bg-dark slide">
    <div class="row">
        <div class="col text-center">
            <h1><img src="~/img/dentista.svg" alt="Alternate Text" width="200" height="200" /></h1>
            <h2 class="text-white display-4">¿Que es un odontólogo?</h2>
            <p class="text-white">Es el profesional encargado de la salud oral. No solo se centra en los dientes, sino también en los diversos órganos que componen la cavidad oral</p>
        </div>
    </div>
</div>

<!--Tratamientos-->
<h1 class="py-3 mb-3 text-center">Tratamientos</h1>
<div class="p-5 container marketing">
    <div class="row">

        <div class="col-lg-4">
            <img src="~/img/t1.svg" class="bd-placeholder-img" width="140" height="140">
            <p>
                <button class="mt-3 btn btn-success" type="button" data-toggle="collapse" data-target="#uno" aria-expanded="false" aria-controls="collapseExample">
                    Odontopediatría
                </button>
            </p>
            <div class="collapse" id="uno">
                <div class="card card-body">
                    Los pequeños también son importantes papa créale una cuenta a tu hijo para que pueda usar el servicio odontograma y agéndale sus citas
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <img src="~/img/t2.svg" class="bd-placeholder-img" width="140" height="140">
            <p>
                <button class="mt-3 btn btn-success" type="button" data-toggle="collapse" data-target="#dos" aria-expanded="false" aria-controls="collapseExample">
                    Limpieza
                </button>
            </p>
            <div class="collapse" id="dos">
                <div class="card card-body">
                    La apariencia de tu sonrisa es clave, una limpieza profunda ayuda a mejorar el aspecto ella
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <img src="~/img/t3.svg" class="bd-placeholder-img" width="140" height="140">
            <p>
                <button class="mt-3 btn btn-success" type="button" data-toggle="collapse" data-target="#tres" aria-expanded="false" aria-controls="collapseExample">
                    Caries
                </button>
            </p>
            <div class="collapse" id="tres">
                <div class="card card-body">
                    Un tratamiento oportuno de caries puede ayudar a prevenir futuras lesiones en tus dientes
                </div>
            </div>
        </div>
    </div>
</div>

<div class="p-5 bg-info slide">
    <div class="row">
        <div class="col text-center">
            <h1><img src="~/img/avatar.png" alt="Alternate Text" width="200" height="200" /></h1>
            <h2 class="text-white">¿Que es odontograma?</h2>
            <p class="text-white">Es un sitio web el cual facilita a los estudiantes de odontología encontrar pacientes para practicar y fortalecer sus habilidades y a los pacientes tener un tratamiento personalizado con la gestión e implementación de citas con las que cuenta esta herramienta. </p>
        </div>
    </div>
</div>


<!--UNAM social media-->
@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Paciente"))
    {
        <div class="p-5 container">
            <h1 class="text-center">¿Que espero como paciente de:?</h1>
            <h3 class="text-center">
                <img src="~/img/paciente.svg" alt="Alternate Text" width="200" height="200" />
            </h3>


            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header" id="headingOne">
