
@{
    ViewBag.Title = "Estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Estudiante";
}



<div class="container">
    <h2 class="mt-3">Nuevo estudiante</h2>

    <div class="p-3 alert-danger">
        <strong>Antes de registrarte es importante lo siguiente:</strong>
        <li>Enviar una fotografia nitida a el correo electronico soporte.odontograma@gmail.com para que nuestro equipo compruebe que eres un estudiante activo</li>
    </div>
    <div class="row">
        <div class="col">
            @using (Html.BeginForm("Estudiante", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="mt-5 mb-3">Crar una cuenta de estudiante.</h4>

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="input-group input-group-sm mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="input-group input-group-sm mb-3">
                    <div class="col-md-7">
                        <div class="text-right">
                            <input type="submit" class="btn btn-lg btn-dark" value="Registrarme" />
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
